{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
